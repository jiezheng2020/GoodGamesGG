extends layout.pug

append head
    link(rel='stylesheet' type="text/css" href='/stylesheets/game.css')
    script(type="application/javascript" src='/js/game.js')

block content
    div(class='main')
        div(class='main__sidebar')
            img(class='main__sidebar-img' src=`.${game.imageHref}`)
            div(class='main__sidebar-stars')
                span(class='main__sidebar-star') ★
                span(class='main__sidebar-star') ★
                span(class='main__sidebar-star') ★
                span(class='main__sidebar-star') ★
                span(class='main__sidebar-star') ★
            select(class='main__sidebar-stpatus')
                option(class='main__sidebar-status-option') -- Played Status --
                option(class='main__sidebar-status-option') Played
                option(class='main__sidebar-status-option') Currently Playing
                option(class='main__sidebar-status-option') Want to Play

        div(class='main__games')
            div(class='main__game-info')
                h3=game.title
                li=game.publisher
                li=game.developer
                li=game.releaseDate
                p=game.description
            div(class='main__game-ratings')
                h3 Add Review
                div(class='main__game-ratings--add')
                    div(class='main__game-ratings--stars') Add Stars Here
                    div(class='main__game-ratings--review') Add Review Here
                h3 Reviews
                div(class='main__game-ratings-all')
                    div(class='main__game-ratings-single')
                        div(class='main__game-ratings--stars') Single Existing Start
                        div(class='main__game-ratings--review') Single Existing Review
                    //- each rating in ratings
