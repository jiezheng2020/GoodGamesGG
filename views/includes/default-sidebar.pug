ul(class='main__sidebar-order')
    span(class='main__siderbar-header-first') Order:
    li(class='main__sidebar-order-alpha' id='title') Alphabetical
    li(class='main__sidebar-order-rating main__sidebar-order--current' id='overallRating') Rating
ul(class='main__sidebar-filter')
    div(class='main__sidebar-filter-alls')
        span(class='main__siderbar-header') Default
        li(class='main__sidebar-filter-all main__sidebar-filter--current' id='all') All
    div(class='main__sidebar-filter-ratings')
        span(class='main__siderbar-header') Ratings
        li(class='main__sidebar-filter-rating' id=4) Above 4 ★
        li(class='main__sidebar-filter-rating' id=3) Above 3 ★
        li(class='main__sidebar-filter-rating' id=2) Above 2 ★
        li(class='main__sidebar-filter-rating' id=1) Above 1 ★
    div(class='main__sidebar-filter--consoles')
        span(class='main__siderbar-header') Console
        each console in consoles
            li(class='main__sidebar-filter-console' id=`${console.name}`) #{console.name}
