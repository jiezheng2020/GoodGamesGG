extends layout.pug

append head
    link(rel='stylesheet' type="text/css" href='/stylesheets/allgames.css')

block content
    div(class='main')
        div(class='main__sidebar')
            ul(class='main__sidebar-order') Order:
                li(class='main__sidebar-order--alpha') Alphabetical
                li(class='main__sidebar-order--rating') Rating
            ul(class='main__sidebar-filter') Filter:
                li(class='main__sidebar-filter--rating') Rating
                li(class='main__sidebar-filter--console') Console
        div(class='main__games')
            ul(class='main__games-list')
                include includes/game-container.pug